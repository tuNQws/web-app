<h1>Update courses</h1>

<form class="mt-4" method="POST" action="/courses/{{course._id}}">
    <div class="mt-4">
        <label for="title">Title</label>
        <input type="text" class="form-control" value="{{course.title}}" id="title" name="title">
    </div>
    <div class="mt-4">
        <label for="description">Description</label>
        <input type="text" class="form-control" value="{{course.description}}" id="description" name="description">
    </div>
    <button type="submit" class="mt-4 btn btn-primary">Submit</button>
</form>